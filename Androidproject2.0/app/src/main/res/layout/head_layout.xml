    <TextView
        android:layout_width="82dp"
        android:layout_height="match_parent"
        android:text="Pl3"
        android:textSize="20dp"
        android:textStyle="bold"
        android:gravity="center"
        android:id="@+id/three_head" />
    <TextView
        android:layout_width="82dp"
        android:layout_height="match_parent"
        android:text="Pl4"
        android:textSize="20dp"
        android:textStyle="bold"
        android:gravity="center"
